<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/screen_tv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textColor="#000000"
        android:padding="10dp"
        tools:text="6"
        android:textSize="50sp"
        android:gravity="bottom|right"
        android:maxLength="12"
        android:background="#FFB6C1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="digit_pressed"
            android:text="9"/>
        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="operatorPressed"
            android:layout_height="wrap_content"
            android:text="/"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="digit_pressed"
            android:text="6"/>
        <Button
            android:id="@+id/button_mult"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="operatorPressed"
            android:layout_height="wrap_content"
            android:text="*"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="digit_pressed"
            android:text="3"/>
        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="operatorPressed"
            android:layout_height="wrap_content"
            android:text="-"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_decimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="."
            android:onClick="decimalPressed"/>
        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            android:onClick="digit_pressed"/>
        <Button
            android:id="@+id/button_clr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="clear_pressed"
            android:text="CLR"/>
        <Button
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="operatorPressed"
            android:text="+"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_equal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="equal_pressed"
            android:text="="/>
    </LinearLayout>



</LinearLayout>